<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 引用控件时，使用app:daoyin_name="daoyin",即可传入属性值 -->
    <declare-styleable name="my_base_card_view">
        <attr name="background_color" format="color"></attr>
        <attr name="text" format="string"></attr>

        <attr name="daoyin_id" format="reference"></attr>
        <attr name="daoyin_image" format="reference"></attr>
        <attr name="daoyin_name" format="string"></attr>
        <attr name="daoyin_level" format="string"></attr>
        <attr name="daoyin_time" format="string"></attr>
        <attr name="daoyin_hot" format="string"></attr>
        <!-- ARouter 回调值 -->
        <attr name="pager_daoyin" format="string"></attr>
        <attr name="taskName" format="string"></attr>
    </declare-styleable>

    <!-- 引用CoordinatorTabLayout控件时，使用app:contentScrim="contentScrim",即可传入属性值 -->
    <declare-styleable name="CoordinatorTabLayout">
        <attr name="contentScrim" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabTextColor" format="color" />
    </declare-styleable>

</resources>